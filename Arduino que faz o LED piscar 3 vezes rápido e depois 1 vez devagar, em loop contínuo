/*
  Programa 2: Padrão de piscadas
  O LED pisca 3 vezes rápido e depois 1 vez devagar
*/

const int pinoLed = 13; // LED conectado ao pino 13

void setup() {
  pinMode(pinoLed, OUTPUT); // Configura o pino como saída
}

void loop() {
  // 3 piscadas rápidas
  for (int i = 0; i < 3; i++) {
    digitalWrite(pinoLed, HIGH);
    delay(200); // Rápido
    digitalWrite(pinoLed, LOW);
    delay(200);
  }

  // 1 piscada lenta
  digitalWrite(pinoLed, HIGH);
  delay(1000); // Lento
  digitalWrite(pinoLed, LOW);
  delay(1000);
}
